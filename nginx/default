server {
  server_name lct-2024.kladnitsky.ru;

  location / {
    proxy_set_header Host            $host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_pass http://192.168.49.2;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/k8s.kladnitsky.ru/fullchain.pem; # ma>
    ssl_certificate_key /etc/letsencrypt/live/k8s.kladnitsky.ru/privkey.pem; # >
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
  server_name api-lct-2024.kladnitsky.ru;

  location / {
    proxy_set_header Host            $host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_pass http://192.168.49.2;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/k8s.kladnitsky.ru/fullchain.pem; # ma>
    ssl_certificate_key /etc/letsencrypt/live/k8s.kladnitsky.ru/privkey.pem; # >
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}


server {
    if ($host = api-lct-2024.kladnitsky.ru) {
        return 301 https://$host$request_uri;
    }

    if ($host = lct-2024.kladnitsky.ru) {
        return 301 https://$host$request_uri;
    }


  listen 80;
  server_name k8s.kladnitsky.ru;
    return 404; # managed by Certbot


}